              .tour-price
                | Rp. 4.000.000 
                br
                small  /Pax
              button.btn.btn-primary
                a(href='bali-order.html')
                  span Detail Selengkapnya
        .col-12.col-md-12.col-lg-12.col-xl-6(style='margin-top: 50px;')
          .tour-item.wow.fadeIn
            .media
              .thumb
                a(href='japan-order.html')
                  img(src='golden/img/japan.jpg', alt='')
              .media-body
                .tour-info
                  h3 Tour Jepang Dan Korea
                  .tour-price
                    | RP 20.000.000 
                    br
                    small  3 Hari 2 Malam
                  button.btn.btn-primary
                    a(href='japan-order.html')
                      span Detail Selengkapnya
          .tour-item.wow.fadeIn
            .media
              .thumb
                a(href='padang-order.html')
                  img(src='golden/img/tour/padang.jpg', alt='')
              .media-body
                .tour-info
                  h3 Tour Padang
                  .tour-price
                    | RP 3.500.000 
                    br
                    small  3 Hari 2 Malam
                  button.btn.btn-primary
                    a(href='padang-order.html')
                      span Detail Selengkapnya
          .tour-item.wow.fadeIn
            .media
