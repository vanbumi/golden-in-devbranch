    .container
      .row
        .col-md-12
          .section-title.text-center
            h2
              span Tur unggulan
      .row
        .col-12.col-md-12.col-lg-12.col-xl-6
          .tour-item.wow.fadeIn
            .thumb
              a(href='Umroh-order.html')
                img(src='golden/img/tour/Umroh.jpg', alt='')
            .tour-info
              h3 UMROH PLUS TURKEY
              .tour-price
                | RP 28.500.000 
                br
                small /Pax/Double
